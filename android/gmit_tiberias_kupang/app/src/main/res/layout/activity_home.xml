<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	style="@style/loginParent"
	tools:context=".Activity.Home">
	<ScrollView
		style="@style/parent">

		<RelativeLayout
			style="@style/parent">


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentTop="true"
				android:weightSum="12">

				<LinearLayout
					style="@style/parent"
					android:background="@drawable/login_shape_bk"
					android:orientation="vertical"
					android:layout_weight="3">

					<ImageView
						style="@style/parent"
						android:background="@drawable/ic_login_bk"
						android:contentDescription="login background" />

				</LinearLayout>

			</LinearLayout>

			<RelativeLayout
				android:id="@+id/rl1"
				android:layout_marginTop="32dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_centerVertical="true"
					android:layout_width="wrap_content"
					android:fontFamily="@font/product_sans_bold"
					android:layout_height="wrap_content"
					android:text="Home"
					android:textColor="#ffffff"
					android:textSize="25dp">

				</TextView>

				<de.hdodenhof.circleimageview.CircleImageView
					android:layout_alignParentRight="true"
					android:src="@drawable/profile"
					android:layout_width="62dp"
					android:layout_height="62dp">

				</de.hdodenhof.circleimageview.CircleImageView>

			</RelativeLayout>

			<GridLayout
				android:layout_below="@id/rl1"
				android:columnCount="2"
				android:rowCount="3"
				android:alignmentMode="alignMargins"
				android:columnOrderPreserved="false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_columnWeight="1"
					android:layout_rowWeight="1"
					app:cardElevation="6dp"
					app:cardCornerRadius="12dp"
					android:layout_margin="12dp">

					<LinearLayout
						android:foreground="?android:attr/selectableItemBackground"
						android:id="@+id/l_jadwal"
						android:orientation="vertical"
						android:padding="16dp"
						android:gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<ImageView
							android:layout_width="80dp"
							android:layout_height="80dp"
							android:src="@drawable/jadwal"/>

						<TextView
							android:layout_marginTop="12dp"
							android:textColor="#6f6f6f"
							android:textSize="18sp"
							android:gravity="center"
							android:text="Jadwal Ibadah"
							android:fontFamily="@font/product_sans_regular"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>

					</LinearLayout>

				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_columnWeight="1"
					android:layout_rowWeight="1"
					app:cardElevation="6dp"
					app:cardCornerRadius="12dp"
					android:layout_margin="12dp">

					<LinearLayout
						android:foreground="?android:attr/selectableItemBackground"
						android:id="@+id/l_info"
						android:orientation="vertical"
						android:padding="16dp"
						android:gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<ImageView
							android:layout_width="80dp"
							android:layout_height="80dp"
							android:src="@drawable/informasi"/>

						<TextView
							android:layout_marginTop="12dp"
							android:textColor="#6f6f6f"
							android:textSize="18sp"
							android:text="Pengumuman"
							android:gravity="center"
							android:fontFamily="@font/product_sans_regular"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>

					</LinearLayout>

				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_columnWeight="1"
					android:layout_rowWeight="1"
					app:cardElevation="6dp"
					app:cardCornerRadius="12dp"
					android:layout_margin="12dp">

					<LinearLayout
						android:foreground="?android:attr/selectableItemBackground"
						android:id="@+id/l_liturigi"
						android:orientation="vertical"
						android:padding="16dp"
						android:gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<ImageView
							android:layout_width="80dp"
							android:layout_height="80dp"
							android:src="@drawable/jadwal"/>

						<TextView
							android:layout_marginTop="12dp"
							android:textColor="#6f6f6f"
							android:textSize="18sp"
							android:text="Liturgi"
							android:gravity="center"
							android:fontFamily="@font/product_sans_regular"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>



					</LinearLayout>

				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_columnWeight="1"
					android:layout_rowWeight="1"
					app:cardElevation="6dp"
					app:cardCornerRadius="12dp"
					android:layout_margin="12dp">

					<LinearLayout
						android:foreground="?android:attr/selectableItemBackground"
						android:id="@+id/l_warta"
						android:orientation="vertical"
						android:padding="16dp"
						android:gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<ImageView
							android:layout_width="80dp"
							android:layout_height="80dp"
							android:src="@drawable/warta"/>

						<TextView
							android:layout_marginTop="12dp"
							android:textColor="#6f6f6f"
							android:textSize="18sp"
							android:text="Warta Ibadah"
							android:gravity="center"
							android:fontFamily="@font/product_sans_regular"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>

					</LinearLayout>

				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_columnWeight="1"
					android:layout_rowWeight="1"
					app:cardElevation="6dp"
					app:cardCornerRadius="12dp"
					android:layout_margin="12dp">

					<LinearLayout
						android:foreground="?android:attr/selectableItemBackground"
						android:id="@+id/l_artikel"
						android:orientation="vertical"
						android:padding="16dp"
						android:gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<ImageView
							android:layout_width="80dp"
							android:layout_height="80dp"
							android:src="@drawable/artikel"/>

						<TextView
							android:layout_marginTop="12dp"
							android:textColor="#6f6f6f"
							android:textSize="18sp"
							android:text="Artikel dan Galeri"
							android:gravity="center"
							android:fontFamily="@font/product_sans_regular"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>

					</LinearLayout>

				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_columnWeight="1"
					android:layout_rowWeight="1"
					app:cardElevation="6dp"
					app:cardCornerRadius="12dp"
					android:layout_margin="12dp">

					<LinearLayout
						android:foreground="?android:attr/selectableItemBackground"
						android:id="@+id/l_berita"
						android:orientation="vertical"
						android:padding="16dp"
						android:gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<ImageView
							android:layout_width="80dp"
							android:layout_height="80dp"
							android:src="@drawable/berita"/>

						<TextView
							android:layout_marginTop="12dp"
							android:textColor="#6f6f6f"
							android:textSize="18sp"
							android:text="Berita"
							android:gravity="center"
							android:fontFamily="@font/product_sans_regular"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>

					</LinearLayout>

				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_columnWeight="1"
					android:layout_rowWeight="1"
					app:cardElevation="6dp"
					app:cardCornerRadius="12dp"
					android:layout_margin="12dp">

					<LinearLayout
						android:foreground="?android:attr/selectableItemBackground"
						android:id="@+id/l_kontak"
						android:orientation="vertical"
						android:padding="16dp"
						android:gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<ImageView
							android:layout_width="80dp"
							android:layout_height="80dp"
							android:src="@drawable/info"/>

						<TextView
							android:layout_marginTop="12dp"
							android:textColor="#6f6f6f"
							android:textSize="18sp"
							android:text="Informasi Umum"
							android:gravity="center"
							android:fontFamily="@font/product_sans_regular"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>

					</LinearLayout>

				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_columnWeight="1"
					android:layout_rowWeight="1"
					app:cardElevation="6dp"
					app:cardCornerRadius="12dp"
					android:layout_margin="12dp">

					<LinearLayout
						android:foreground="?android:attr/selectableItemBackground"
						android:id="@+id/l_renungan"
						android:orientation="vertical"
						android:padding="16dp"
						android:gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<ImageView
							android:layout_width="80dp"
							android:layout_height="80dp"
							android:src="@drawable/renungan"/>

						<TextView
							android:layout_marginTop="12dp"
							android:textColor="#6f6f6f"
							android:textSize="18sp"
							android:text="Renungan Harian"
							android:gravity="center"
							android:fontFamily="@font/product_sans_regular"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>

					</LinearLayout>

				</androidx.cardview.widget.CardView>

				<androidx.cardview.widget.CardView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_columnWeight="1"
					android:layout_rowWeight="1"
					app:cardElevation="6dp"
					app:cardCornerRadius="12dp"
					android:layout_margin="12dp">

					<LinearLayout
						android:foreground="?android:attr/selectableItemBackground"
						android:id="@+id/l_admin"
						android:orientation="vertical"
						android:padding="16dp"
						android:gravity="center"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<ImageView
							android:layout_width="80dp"
							android:layout_height="80dp"
							android:src="@drawable/admin"/>

						<TextView
							android:layout_marginTop="12dp"
							android:textColor="#6f6f6f"
							android:textSize="18sp"
							android:text="Administrasi"
							android:gravity="center"
							android:fontFamily="@font/product_sans_regular"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"/>

					</LinearLayout>

				</androidx.cardview.widget.CardView>



			</GridLayout>

		</RelativeLayout>


	</ScrollView>


</RelativeLayout>
