<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_jadwal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:layout_margin="12dp">

    <RelativeLayout
        android:outlineSpotShadowColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/et_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Ibadah : "
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:fontFamily="@font/product_sans_regular"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/nama"
            android:layout_toRightOf="@id/et_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="Nama"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/et_jenis"
            android:layout_below="@+id/et_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis : "
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/jenis"
            android:layout_toRightOf="@id/et_jenis"
            android:layout_below="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis"
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/et_tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Ibadah : "
            android:layout_below="@+id/et_jenis"
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:layout_toRightOf="@id/et_tgl"
            android:layout_below="@+id/jenis"
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/et_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu : "
            android:layout_below="@+id/et_tgl"
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/j_mulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="j_mulai"
            android:layout_toRightOf="@id/et_waktu"
            android:layout_below="@+id/tgl"
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/et_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:layout_toRightOf="@id/j_mulai"
            android:layout_below="@+id/tgl"
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/j_selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="j_selesai"
            android:layout_toRightOf="@id/et_sp"
            android:layout_below="@+id/tgl"
            android:fontFamily="@font/product_sans_regular"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>