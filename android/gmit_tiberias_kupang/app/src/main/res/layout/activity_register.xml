<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	style="@style/loginParent"
	tools:context=".Activity.Register_activity">
	<ScrollView
		style="@style/parent">

		<RelativeLayout
			style="@style/parent">


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentTop="true"
				android:weightSum="12">

				<LinearLayout
					style="@style/parent"
					android:background="@drawable/login_shape_bk"
					android:orientation="vertical"
					android:layout_weight="3">

					<ImageView
						style="@style/parent"
						android:background="@drawable/ic_login_bk"
						android:contentDescription="login background" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentTop="true"
				android:orientation="vertical"
				android:layout_marginTop="0dp"
				android:layout_marginRight="30dp"
				android:layout_marginLeft="30dp">


				<TextView
					style="@style/headerText"
					android:layout_gravity="center"
					android:text="SISTEM INFORMASI"
					android:fontFamily="@font/product_sans_bold"
					android:layout_marginTop="40dp"/>

				<TextView
					style="@style/headerText"
					android:layout_gravity="center"
					android:text="PELAYANAN GMIT"
					android:fontFamily="@font/product_sans_bold"/>

				<TextView
					style="@style/headerText"
					android:layout_gravity="center"
					android:text="TIBERIAS KUPANG"
					android:fontFamily="@font/product_sans_bold"/>

				<androidx.cardview.widget.CardView
					xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:app="http://schemas.android.com/apk/res-auto"
					style="@style/loginCard"
					app:cardCornerRadius="@dimen/loginCardRadius"
					android:elevation="5dp"
					android:layout_gravity="center"
					android:layout_marginTop="@dimen/loginViewsMargin"
					android:layout_marginBottom="@dimen/loginViewsMargin"
					android:background="@color/whiteCardColor">

					<LinearLayout
						style="@style/linearParent"
						android:layout_gravity="center"
						android:padding="@dimen/loginViewsMargin">

						<TextView
							style="@style/headerTextPrimary"
							android:text="@string/register"
							android:layout_marginTop="@dimen/loginViewsMargin"/>

						<androidx.appcompat.widget.Toolbar
							style="@style/parent"
							android:layout_marginTop="@dimen/signup_text_margin_top">
							<EditText
								android:id="@+id/nama_jemaat"
								style="@style/modifiedEditText"
								android:inputType="text"
								android:maxLines="1"
								android:hint="Nama"/>
						</androidx.appcompat.widget.Toolbar>

						<androidx.appcompat.widget.Toolbar
							style="@style/parent"
							android:layout_marginTop="@dimen/signup_text_margin_top">
							<EditText
								android:id="@+id/nik_jemaat"
								style="@style/modifiedEditText"
								android:inputType="text"
								android:maxLines="1"
								android:hint="NIK"/>
						</androidx.appcompat.widget.Toolbar>

						<androidx.appcompat.widget.Toolbar
							style="@style/parent"
							android:layout_marginTop="@dimen/signup_text_margin_top">
							<EditText
								android:id="@+id/gereja_sblm"
								style="@style/modifiedEditText"
								android:inputType="text"
								android:maxLines="1"
								android:hint="Gereja Sebelumnya"/>
						</androidx.appcompat.widget.Toolbar>

						<androidx.appcompat.widget.Toolbar
							style="@style/parent"
							android:layout_marginTop="@dimen/signup_text_margin_top">
							<EditText
								android:id="@+id/email_jemaat"
								style="@style/modifiedEditText"
								android:inputType="textEmailAddress"
								android:maxLines="1"
								android:hint="Email"/>
						</androidx.appcompat.widget.Toolbar>

						<androidx.appcompat.widget.Toolbar
							style="@style/parent"
							android:layout_marginTop="@dimen/signup_text_margin_top">
							<EditText
								android:id="@+id/pass_jemaat"
								style="@style/modifiedEditText"
								android:hint="@string/login_password_hint"
								android:maxLines="1"
								android:inputType="textPassword"/>
						</androidx.appcompat.widget.Toolbar>

						<androidx.appcompat.widget.Toolbar
							style="@style/parent"
							android:layout_marginTop="@dimen/signup_text_margin_top">
							<EditText
								android:id="@+id/rayon_jemaat"
								style="@style/modifiedEditText"
								android:inputType="text"
								android:maxLines="1"
								android:hint="Rayon"/>
						</androidx.appcompat.widget.Toolbar>

						<androidx.appcompat.widget.Toolbar
							style="@style/parent"
							android:layout_marginTop="@dimen/signup_text_margin_top">
							<EditText
								android:id="@+id/alamat_jemaat"
								style="@style/modifiedEditText"
								android:inputType="text"
								android:maxLines="1"
								android:hint="Alamat"/>
						</androidx.appcompat.widget.Toolbar>

						<Button
							android:id="@+id/button_register"
							style="@style/loginButton"
							android:layout_gravity="center"
							android:text="Register" />

<!--						<TextView-->
<!--							style="@style/parent"-->
<!--							android:textAlignment="center"-->
<!--							android:textStyle="bold"-->
<!--							android:textColor="@color/primaryTextColor"-->
<!--							android:text="@string/signup_login_hint"-->
<!--							android:layout_marginTop="@dimen/loginViewsMargin"/>-->

					</LinearLayout>
				</androidx.cardview.widget.CardView>

			</LinearLayout>

		</RelativeLayout>

	</ScrollView>

</RelativeLayout>
